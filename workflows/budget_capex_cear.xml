<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="workflow" id="wkf_budget_capex_cear">
            <field name="name">Cear Workflow</field>
            <field name="osv">budget.capex.cear</field>
            <field name="on_create">True</field>
        </record>
        <!--START ACTIVITIES-->
        <record model="workflow.activity" id="act_budget_capex_cear_draft">
            <field name="name">draft</field>
            <field name="wkf_id" ref="wkf_budget_capex_cear"/>
            <field name="flow_start" eval="True"/>
            <field name="kind">function</field>
            <field name="action">set2draft()</field>
        </record>
        <record model="workflow.activity" id="act_budget_capex_cear_under_process">
            <field name="name">under process</field>
            <field name="wkf_id" ref="wkf_budget_capex_cear"/>
            <field name="kind">function</field>
            <field name="action">set2under_process()</field>
        </record>
        <record model="workflow.activity" id="act_budget_capex_cear_authorized">
            <field name="name">authorize</field>
            <field name="wkf_id" ref="wkf_budget_capex_cear"/>
            <field name="kind">function</field>
            <field name="action">set2authorize()</field>
        </record>
        <record model="workflow.activity" id="act_budget_capex_cear_closed">
            <field name="name">close</field>
            <field name="wkf_id" ref="wkf_budget_capex_cear"/>
            <field name="flow_stop" eval="True"/>
            <field name="kind">function</field>
            <field name="action">set2close()</field>
        </record>
        <!--END ACTIVITIES-->

        <!--START TRANSITION-->
        <record model="workflow.transition" id="budget_capex_cear_draft_to_under_process">
            <field name="act_from" ref="act_budget_capex_cear_draft"/>
            <field name="act_to" ref="act_budget_capex_cear_under_process"/>
            <field name="signal">process</field>
        </record>
        <record model="workflow.transition" id="budget_capex_cear_under_process_to_authorized">
            <field name="act_from" ref="act_budget_capex_cear_under_process"/>
            <field name="act_to" ref="act_budget_capex_cear_authorized"/>
            <field name="signal">authorize</field>
        </record>
        <record model="workflow.transition" id="budget_capex_cear_under_authorized_to_closed">
            <field name="act_from" ref="act_budget_capex_cear_authorized"/>
            <field name="act_to" ref="act_budget_capex_cear_closed"/>
            <field name="signal">close</field>
        </record>
        <!--END TRANSITION-->
    </data>
</odoo>