<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <!--START VIEWS-->
        <!--FORM VIEW-->
        <record model="ir.ui.view" id="view_form_cear_expenditure">
            <field name="name">budget.capex.cear.expenditure</field>
            <field name="model">budget.capex.cear</field>
            <field name="inherit_id" ref="view_form_cear_commitment"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_commitment']" position="after">
                    <field name="is_expenditure"/>
                </xpath>

                <xpath expr="//field[@name='project_id']" position="before">
                    <field name="commitment_id" attrs="{'required': [('is_expenditure','=',True)],
                                                        'invisible': [('is_expenditure','!=',True)]}"/>
                </xpath>

            </field>
        </record>
        <!--TREE VIEW-->
        <record model="ir.ui.view" id="view_tree_cear_expenditure">
            <field name="name">Cear</field>
            <field name="model">budget.capex.cear</field>
            <field name="inherit_id" ref="view_tree_cear_commitment"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_commitment']" position="after">
                    <field name="is_expenditure" groups="base.group_system"/>
                </xpath>
            </field>
        </record>

        <!--START SEARCH-->
        <record model="ir.ui.view" id="search_cear_expenditure">
            <field name="name">Cear Search</field>
            <field name="model">budget.capex.cear</field>
            <field name="arch" type="xml">
                <search>
                    <field name="no"/>
                    <field name="category"/>
                    <field name="state"/>
                    <filter
                            name="filter_state"
                            string="Need Action"
                            domain="[('state', 'not in', ['closed'])]"/>
                    <filter
                            name="filter_expenditure"
                            string="Expenditure CEAR Need Action"
                            domain="[('is_expenditure', '=', True)]"/>
                </search>
            </field>
        </record>
        <!--END SEARCH-->

        <!--START ACTIONS-->
        <!--Cear Action-->
        <record model="ir.actions.act_window" id="action_cear_expenditure">
            <field name="name">Expenditure Cear</field>
            <field name="res_model">budget.capex.cear</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="view_id" ref="view_tree_cear_expenditure"/>
            <field name="search_view_id" ref="budget_capex.search_cear_expenditure"/>
            <field name="domain">[('is_expenditure','=',True)]</field>
            <field name="context">{'form_view_ref': 'budget_capex.view_form_cear_expenditure',
                                   'search_default_filter_expenditure': 1}
            </field>
        </record>
        <!--END ACTIONS-->
    </data>
</openerp>