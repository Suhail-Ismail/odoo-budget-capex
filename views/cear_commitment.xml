<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <!--START VIEWS-->
        <!--FORM VIEW-->
        <record model="ir.ui.view" id="view_form_cear_commitment">
            <field name="name">budget.capex.cear.commitment</field>
            <field name="model">budget.capex.cear</field>
            <field name="arch" type="xml">
                <form string="Cear">
                    <header>

                        <button
                                string="Process"
                                name="process"
                                type="workflow"
                                states="draft"/>
                        <button
                                string="Authorize"
                                name="authorize"
                                type="workflow"
                                states="under process"/>
                        <button
                                string="Close"
                                name="close"
                                type="workflow"
                                states="authorized"/>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,under process,authorized,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <group group="base.group_system">
                                <field name="is_commitment"/>
                                <field name="write_date"/>
                            </group>
                            <h1>
                                <field name="no" default_focus="1" placeholder="Cear No"/>
                            </h1>
                        </div>
                        <group string="General">
                            <group>
                                <field name="project_id" context="{'default_is_project': True}"/>
                                <field name="region_id"/>
                                <field name="category"/>
                                <field name="year"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="investment_area_id"
                                       options="{'no_create_edit': True, 'no_open': True}"/>
                                <field name="pec_no"/>
                            </group>
                            <group>
                                <field name="expenditure_amount"/>
                            </group>
                            <group>
                                <field name="commitment_amount"/>
                            </group>
                        </group>
                            <group>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="remarks"/>
                            </group>
                        <group string="Summary">
                            <group attrs="{'invisible': [('write_date', '==', False)]}">
                                <field name="fn_utilized_amount"/>
                                <field name="authorized_amount"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Expenditure" attrs="{'invisible': [('is_commitment', '!=', True)]}">
                                <field name="expenditure_ids" context="{'default_commitment_id': id,
                                                                        'default_is_expenditure': True}"/>
                            </page>
                            <page string="Progress">
                                <field name="progress_allocation_ids"
                                       attrs="{'readonly': 1}">
                                    <tree>
                                        <field name="progress_id"/>
                                        <field name="cear_id" groups="base.group_system"/>
                                        <field name="allocated_amount" sum="1"/>
                                        <field name="remarks"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!--TREE VIEW-->
        <record model="ir.ui.view" id="view_tree_cear_commitment">
            <field name="name">budget.capex.cear.commitment</field>
            <field name="model">budget.capex.cear</field>
            <field name="arch" type="xml">
                <tree decoration-success="state not in ['closed']"
                      decoration-muted="state in ['closed']">
                    <field name="no"/>
                    <field name="year"/>
                    <field name="is_commitment" groups="base.group_system"/>
                    <field name="commitment_amount" sum="1"/>
                    <field name="expenditure_amount" sum="1"/>
                    <field name="authorized_amount"/>
                    <field name="fn_utilized_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!--END CONTRACTOR VIEWS-->
        <!--START SEARCH-->
        <record model="ir.ui.view" id="search_cear_commitment">
            <field name="name">Cear Search</field>
            <field name="model">budget.capex.cear</field>
            <field name="arch" type="xml">
                <search>
                    <field name="no"/>
                    <field name="category"/>
                    <field name="state"/>
                    <filter
                            name="filter_state"
                            string="Need Action"
                            domain="[('state', 'not in', ['closed'])]"/>
                </search>
            </field>
        </record>
        <!--END SEARCH-->

        <!--START ACTIONS-->
        <!--Cear Action-->
        <record model="ir.actions.act_window" id="action_cear_commitment">
            <field name="name">Commitment Cear</field>
            <field name="res_model">budget.capex.cear</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="view_id" ref="view_tree_cear_commitment"/>
            <!--<field name="search_view_id" ref="search_budget"/>-->
            <field name="domain">[('is_commitment','=',True)]</field>
            <field name="context">{'form_view_ref': 'budget_capex.view_form_cear_commitment',
                                   'search_default_filter_state': 1,
                                   'default_is_commitment': True}
            </field>
        </record>
        <!--END ACTIONS-->
    </data>
</openerp>