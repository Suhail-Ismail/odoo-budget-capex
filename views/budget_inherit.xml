<?xml version="1.0" encoding="utf-8"?>
<!--CONTEXT AND ATTRIBUTES ARE MANAGE IN PROJECT INHERITANCE-->
<openerp>
    <data>
        <!--START VIEWS-->
        <!-- FORM VIEW-->
        <record model="ir.ui.view" id="view_form_budget">
            <field name="name">Budget Inherit</field>
            <field name="model">budget.core.budget</field>
            <field name="inherit_id" ref="budget_core.view_form_budget"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='end_date']" position="after">
                    <field name="total_task_accrual_amount"
                           attrs="{'invisible': [('is_project', '!=', True),('write_date', '!=', False)]}"/>
                </xpath>

                <xpath expr="//field[@name='expenditure_amount']" position="after">
                    <field name="total_task_expenditure_amount" attrs="{'invisible': [('is_project', '!=', True),
                                                                                      ('write_date', '!=', False)]}"/>
                    <field name="balance_expenditure_amount" attrs="{'invisible': [('is_project', '!=', True),
                                                                                   ('write_date', '!=', False)]}"/>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="Task" attrs="{'invisible': [('is_project', '!=', True)]}">
                        <field name="task_ids"
                               context="{'default_project_id': id}"/>
                    </page>
                </xpath>

            </field>
        </record>
        <record model="ir.ui.view" id="view_form_budget_inherit_project">
            <field name="name">Budget Inherit</field>
            <field name="model">budget.core.budget</field>
            <field name="inherit_id" ref="budget_core.view_form_budget_inherit_project"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='region_id']" position="before">
                    <field name="overall_progress"
                           widget="progressbar"
                           attrs="{'invisible': [('is_project', '!=', True)]}"/>
                </xpath>

                <xpath expr="//field[@name='commitment_amount']" position="after">
                    <field name="total_task_commitment_amount" attrs="{'invisible': [('is_project', '!=', True),
                                                                                     ('write_date', '!=', False)]}"/>
                    <field name="balance_commitment_amount" attrs="{'invisible': [('is_project', '!=', True),
                                                                                  ('write_date', '!=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>