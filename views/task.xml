<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
    <!--START CONTRACTOR VIEWS-->
        <!--CONTRACTOR FORM VIEW-->
        <record model="ir.ui.view" id="view_form_task">
            <field name="name">Task</field>
            <field name="model">budget.task</field>
            <field name="arch" type="xml">
                <form string="Task">
                    <header>
                        <!--<button-->
                            <!--string="Verify"-->
                            <!--name="verify"-->
                            <!--type="workflow"-->
                            <!--states="draft" />-->
                        <!--<button-->
                            <!--string="Place On-hold"-->
                            <!--name="on_hold"-->
                            <!--type="workflow"-->
                            <!--states="draft,verified" />-->
                        <!--<button-->
                            <!--string="Reject"-->
                            <!--name="reject"-->
                            <!--type="workflow"-->
                            <!--states="draft,verified,on hold" />-->

                        <field name="state" widget="statusbar"
                               statusbar_visible="active,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="task_no" default_focus="1" placeholder="Task No"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="region_id"/>
                                <field name="category"/>
                                <field name="year"/>
                                <field name="major_type"/>
                                <field name="minor_sub_type"/>
                                <field name="gl_code"/>
                                <field name="pec_no"/>
                                <field name="task_class"/>
                                <field name="task_owner"/>
                                <field name="task_created_by"/>
                                <field name="task_status"/>
                            </group>
                            <group>
                                <field name="authorized_amount"/>
                                <field name="current_year"/>
                                <field name="total_amount"/>
                                <field name="transferable_amount"/>
                                <field name="current_month_exp_amount"/>
                                <field name="completion"/>
                            </group>
                            <group>
                                <field name="task_start_date"/>
                                <field name="task_completion_date"/>
                                <field name="last_pcc_date"/>
                                <field name="expected_completion_date"/>
                                <field name="last_followed_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="task_description"/>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                        <notebook>
                            <page string="Accruals">
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--CONTRACTOR FORM VIEW-->
        <record model="ir.ui.view" id="view_tree_task">
            <field name="name">Task</field>
            <field name="model">budget.task</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="region_id"/>
                    <field name="category"/>
                    <field name="year"/>
                    <field name="task_no"/>
                    <field name="authorized_amount"/>
                    <field name="transferable_amount"/>
                    <!--<field name="sent_finance_date"/>-->
                    <!--<field name="state"/>-->
                </tree>
            </field>
        </record>
    <!--END CONTRACTOR VIEWS-->

    <!--START ACTIONS-->
        <!--Task Action-->
        <record model="ir.actions.act_window" id="action_task">
            <field name="name">Task</field>
            <field name="res_model">budget.task</field>
            <!--<field name="domain">[('is_budget_task','=',True)]</field>-->
            <!--<field name="context">{'default_is_budget_task': True}</field>-->
        </record>

        <!--Override View-->
        <!--Override Default View-->
        <record model="ir.actions.act_window.view" id="action_task_view_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_task"/>
            <field name="act_window_id" ref="action_task"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_task_view_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_task"/>
            <field name="act_window_id" ref="action_task"/>
        </record>
    <!--END ACTIONS-->
    </data>
</openerp>